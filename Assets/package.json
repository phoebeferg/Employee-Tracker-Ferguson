{
  "name": "employee-management-cli",
  "version": "1.0.0",
  "description": "A command-line application for managing employees using PostgreSQL and Inquirer.js",
  "main": "dist/index.js",
  
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "inquirer": "^9.3.7",
    "pg": "^8.13.3"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.17.23",
    "@types/pg": "^8.11.11",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
